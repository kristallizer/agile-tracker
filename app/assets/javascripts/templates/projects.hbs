<div class="col-md-6">
  {{#if isNewing}}
    <div class="well">
      <form {{action 'createNewProject' on="submit"}}>
        <div class="form-group">
          {{input type="text" value=newProjectName class="form-control" placeholder="New Your Project"}}
        </div>
        <div class="form-group">
          {{textarea  value=newProjectDescription class="form-control"}}
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-default">Create Project</button>
          <a href="javascript:;" {{action 'cancel'}}>Cancel</a>
        </div>
      </form>
    </div>
  {{else}}
    <header>
      {{!-- <h2>Your projects</h2> --}}
      <button class="btn btn-default" href="javascript:;" class="pull-left" {{action 'showNewForm'}}>Create project</a>
    </header>
  {{/if}}
  <div class="top-spacer">
    <table class="table">
      <tbody>
        {{#each controller}}
          <div class="panel panel-default">
            <div class="panel-heading">
              {{#link-to 'project' this}} {{name}} {{/link-to}}
            </div>
            <div class="panel-body">
              {{description}}
            </div>
          </div>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<div class="col-md-6">
  <h2 class="no-top-margin">My Open Tasks</h2>
</div>

